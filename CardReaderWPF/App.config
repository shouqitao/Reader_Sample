<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <appSettings>
        <!-- 读卡器配置 -->
        <add key="UseUsb" value="true" />
        <add key="UsbPort" value="1001" />
        <add key="SerialPort" value="1" />
        <add key="TimeoutSeconds" value="10" />
        <add key="AutoBeep" value="true" />
        <add key="PhotoSavePath" value="Photos" />
        
        <!-- 应用程序设置 -->
        <add key="AutoConnect" value="false" />
        <add key="LogLevel" value="Info" />
        <add key="MaxLogEntries" value="1000" />
    </appSettings>
    
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <!-- 如果需要程序集绑定重定向，在此添加 -->
        </assemblyBinding>
    </runtime>
</configuration>